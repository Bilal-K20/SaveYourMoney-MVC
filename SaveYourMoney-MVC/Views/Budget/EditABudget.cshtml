@model EditABudgetViewModel
<h1>Edit A Budget</h1>
<!-- HTML Edit Form (Modal) -->
<div class="modal fade" id="editBudgetModal" tabindex="-1" aria-labelledby="editBudgetModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editBudgetModalLabel">Edit Budget Entry</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">


                <form id="editBudgetForm">
                    <div class="mb-3">
                        <label for="editBudgetId" class="form-label">Budget ID</label>
                        <input type="text" class="form-control" id="editBudgetId" readonly value="@Model.BudgetId">
                    </div>
                    <div class="mb-3">
                        <label for="editAmount" class="form-label">Amount</label>
                        <input type="text" class="form-control" id="editAmount" required value="@Model.Amount">
                    </div>
                    <div class="mb-3">
                        <label for="editCategoryName" class="form-label">Category Name</label>
                        <input type="text" class="form-control" id="editCategoryName" required value="@Model.CategoryName">
                    </div>
                    <div class="mb-3">
                        <label for="editDescription" class="form-label">Description</label>
                        <input type="text" class="form-control" id="editDescription" required value="@Model.Description">
                    </div>
                    <div class="mb-3">
                        <label for="editDate" class="form-label">Date</label>
                        <input type="date" class="form-control" id="editDate" required value="@Model.Date.ToString("yyyy-MM-dd")">
                    </div>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </form>

            </div>
        </div>
    </div>
</div>

<!-- Script to Handle Editing -->
<script>document.addEventListener('DOMContentLoaded', function () {
        var editBudgetForm = document.getElementById('editBudgetForm');

        // Event listener for submitting edit form
        editBudgetForm.addEventListener('submit', function (event) {
            event.preventDefault();

            // Retrieve form data
            var budgetId = document.getElementById('editBudgetId').value;
            var amount = document.getElementById('editAmount').value;
            var categoryName = document.getElementById('editCategoryName').value;
            var description = document.getElementById('editDescription').value;
            var date = document.getElementById('editDate').value;

            // Implement logic to update the budget entry with the new data
            console.log('Editing budget entry:', budgetId, amount, categoryName, description, date);

            // Close the modal after submitting the form
            var editBudgetModal = bootstrap.Modal.getInstance(document.getElementById('editBudgetModal'));
            editBudgetModal.hide();
        });
    });</script>
