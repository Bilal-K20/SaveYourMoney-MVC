@model SaveYourMoney_MVC.ViewModels.ExpenseViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Expense Management</title>
    <!-- Include Bootstrap CSS -->
    
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Expense Management</h1>

        @if (Model.Expenses == null || Model.Expenses.Count() == 0)
            {
            <div class="alert alert-warning" role="alert">
                Sorry, you haven't created any expenses yet. Please create one.
            </div>
            <!-- Add an Expense button -->
            @*<button href="AddExpense" asp-controller="Expense" asp-action="AddExpense" class="btn btn-primary mb-4" id="addExpenseButton">Add an Expense</button>*@

            <button asp-controller="Expense" asp-action="AddExpense" class="btn btn-primary mb-4" id="addExpenseButton" data-bs-toggle="modal" data-bs-target="#addExpenseModal" data-url="@Url.Action("AddExpense", "Expense")">Add an Expense</button>
            }
            else
            {
            <!-- Table to display expenses -->
            <div class="row mb-3">
                <div class="col-auto">
                    <label for="datePicker" class="form-label">Select Date:</label>
                    <input type="date" id="datePicker" class="form-control">
                </div>
                <div class="col-auto">
                    <button id="filterButton" class="btn btn-primary mt-4">Filter</button>
                </div>
            </div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Expense Title</th>
                        <th>Description</th>
                        <th>Amount</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody id="expenseTableBody">
                    @foreach (var expense in Model.Expenses)
                        {
                        <tr>
                            <td>@expense.ExpenseTitle</td>
                            <td>@expense.Description</td>
                            <td>@expense.Amount.ToString("C")</td>
                            <td>@expense.Date.ToShortDateString()</td>
                        </tr>
                        }
                </tbody>
            </table>
            }
    </div>

     Add Expense Modal 
    <div class="modal fade" id="addExpenseModal" tabindex="-1" aria-labelledby="addExpenseModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addExpenseModalLabel">Add New Expense</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="addExpenseModalBody">
                     Add Expense Form will be loaded here dynamically 
                </div>
            </div>
        </div>
    </div>

    <!-- Include Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            console.log("js works");
            $('#addExpenseButton').click(function () {
                console.log("add expense on click triggered");
                var url = $(this).data('url');
                $.get(url, function (data) {
                    $('#addExpenseModal .modal-body').html(data);
                    $('#addExpenseModal').modal('show');
                });
            });
        });
