@model SaveYourMoney_MVC.ViewModels.AddCategoryViewModel

<h1>Add Category</h1>

<form asp-controller="Category" asp-action="AddCategory" method="post">
    <div>
        <label asp-for="CategoryName">Category Name:</label>
        <input asp-for="CategoryName" class="form-control" required>
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>
    <button type="submit">Add Category</button>
</form>
